general {
        colors = true
        interval = 5
}

order += "keyboard_layout"
# order += "volume_master"
order += "wireless _first_"
#order += "ethernet _first_"
order += "battery all"
#order += "disk /"
#order += "load"
order += "memory"
order += "tztime local"


keyboard_layout {
    layouts = ['us', 'ru', 'ua']
    cache_timeout = 0.0G5    
}


wireless _first_ {
        format_up = "Wifi is on (%ip)"
        format_down = "Wifi down"
}

# ethernet _first_ {
#         format_up = "E: %ip (%speed)"
#         format_down = "E: down"
# }

battery all {
        format = "%status %percentage %remaining"
}

# disk "/" {
#         format = "%avail"
# }

# load {
#         format = "%1min"
# }

memory {
        format = "RAM: %used " # | %available"
        threshold_degraded = "1G"
       	format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}


set $mod Mod4

# My settings
floating_modifier $mod
focus_follows_mouse no
font pango: JetBrains Mono 10

floating_minimum_size 400 x 350
floating_maximum_size 1800 x 900
# for_window [class="kitty"] floating enable
for_window [class="Blueman"] floating enable
for_window [class="Telegram"] floating enable
for_window [class=".*"] resize set 955 535
for_window [class=".*"] focus
exec --no-startup-id nitrogen --restore; sleep 1; compton -b
assign [class="firefox"] $ws3
assign [class="Xfce4-terminal"] $ws1
assign [class="Nautilus"] $ws5
assign [class="Foliate"] $ws5
assign [class="pycharm"] $ws2
assign [class="code"] $ws2


# autostart
# exec_always --no-startup-id lxpanel
# exec_always --no-startup-id ~/.config/polybar/launch.sh --grayblocks &
exec --no-startup-id "$HOME/.config/i3/lockscreen"
